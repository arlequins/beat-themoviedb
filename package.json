{
  "name": "@arlequins/beat-themoviedb",
  "version": "1.0.0-alpha.2",
  "description": "Created for https://github.com/arlequins/beat-themoviedb",
  "license": "Apache-2.0",
  "author": "An <harlequin.beat@gmail.com> (https://github.com/arlequins)",
  "main": "server/index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/arlequins/beat-themoviedb.git"
  },
  "directories": {
    "doc": "docs"
  },
  "keywords": [
    "beat",
    "react 17",
    "webpack 5"
  ],
  "engines": {
    "node": ">=14.15.4"
  },
  "bugs": {
    "url": "https://github.com/arlequins/beat-themoviedb#readme"
  },
  "files": [
    "server/**/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint && npm test",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        2,
        "always",
        240
      ]
    }
  },
  "scripts": {
    "test": "jest --config jest.config.json --collect-coverage --detectOpenHandles --updateSnapshot",
    "test:watch": "jest --config jest.config.json --watch",
    "start": "webpack serve --mode=development --progress --color --port 5000 --env=development",
    "build": "npm run test && webpack --mode=production --env=production",
    "format": "prettier --write \"src/client/**/*.{ts,tsx}\"",
    "lint": "tslint -p tsconfig.json",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A library",
    "postversion": "git push && git push --tags",
    "deploy": "npm publish"
  },
  "dependencies": {
    "@material-ui/lab": "^4.0.0-alpha.57",
    "moment": "^2.29.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-strict-mode": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.5",
    "@commitlint/config-conventional": "^11.0.0",
    "@material-ui/core": "^4.11.2",
    "@material-ui/icons": "^4.11.2",
    "@types/jest": "^26.0.19",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-helmet": "^6.1.0",
    "@types/react-redux": "^7.1.14",
    "@types/react-router-config": "^5.0.2",
    "@types/react-router-dom": "^5.1.7",
    "@types/react-test-renderer": "^17.0.0",
    "@types/redux-logger": "^3.0.8",
    "@types/uuid": "^8.3.0",
    "axios": "^0.21.1",
    "babel-loader": "^8.2.2",
    "classnames": "^2.2.6",
    "clean-webpack-plugin": "^3.0.0",
    "commitlint": "^11.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.0.1",
    "html-webpack-plugin": "^5.0.0-alpha.3",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.3.3",
    "node-sass": "^5.0.0",
    "prettier": "^2.2.1",
    "query-string": "6.13.8",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-helmet": "^6.1.0",
    "react-redux": "^7.2.2",
    "react-router": "^5.2.0",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.2.0",
    "react-test-renderer": "^17.0.1",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-observable": "^1.2.0",
    "rxjs": "^6.5.5",
    "sass-loader": "^10.1.0",
    "source-map-loader": "^2.0.0",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.13",
    "tslib": "^2.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-loader": "^3.5.4",
    "tslint-plugin-prettier": "^2.3.0",
    "tslint-react-hooks": "^2.2.2",
    "typesafe-actions": "^5.1.0",
    "typescript": "^4.1.3",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.1",
    "webpack-manifest-plugin": "^3.0.0",
    "webpack-node-externals": "^2.5.2",
    "workbox-webpack-plugin": "6.0.2"
  }
}
